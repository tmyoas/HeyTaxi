<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:id="@+id/result_bg"
        android:src="@drawable/result_background"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_game"
        android:src="@drawable/return_game_default"
        android:layout_marginBottom="100dp"
        android:layout_above="@+id/image_title"
        android:layout_alignLeft="@+id/image_title"
        android:layout_alignStart="@+id/image_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_title"
        android:src="@drawable/return_title_default"
        android:layout_marginBottom="50dp"
        android:longClickable="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_num3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/num_0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_num2"
        android:src="@drawable/num_0"
        android:layout_alignTop="@+id/result_bg"
        android:layout_toRightOf="@+id/result_num3"
        android:layout_toEndOf="@+id/result_num3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_num1"
        android:src="@drawable/num_0"
        android:layout_alignTop="@+id/result_bg"
        android:layout_toRightOf="@+id/result_num2"
        android:layout_toEndOf="@+id/result_num2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result_num0"
        android:src="@drawable/num_0"
        android:layout_alignTop="@+id/result_bg"
        android:layout_toRightOf="@+id/result_num1"
        android:layout_toEndOf="@+id/result_num1" />


</RelativeLayout>